<%= form_for(@patch, html: {role: "form", multipart: true}) do |f| %>
  <% if @patch.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@patch.errors.count, "error") %> prohibited this patch from being saved:</h2>

      <ul>
      <% @patch.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="row">
    <div class="col-sm-6">
      <div class="row">
        <div class="form-group col-lg-6">
          <%= f.label :name %><br>
          <%= f.text_field :name, class: "form-control" %>
        </div>
        <div class="form-group col-lg-6">
          <%= f.label :code %><br>
          <%= f.text_field :code, class: "form-control" %>
        </div>
      </div><!-- .row -->
      <div class="row">
        <div class="form-group col-lg-6">
          <%= f.label :dots_count %><br>
          <%= f.number_field :dots_count, class: "form-control" %>
        </div>
        <div class="form-group col-lg-6">
          <%= f.label :colors_count %><br>
          <%= f.number_field :colors_count, class: "form-control" %>
        </div>
      </div><!-- .row -->
      <div class="row">
        <div class="form-group col-lg-6">
          <%= f.label :width, "#{t('activerecord.attributes.patch.width')} <small>(mm)</small>".html_safe %><br>
          <%= f.text_field :width, class: "form-control" %>
        </div>
        <div class="form-group col-lg-6">
          <%= f.label :height, "#{t('activerecord.attributes.patch.height')} <small>(mm)</small>".html_safe %><br>
          <%= f.text_field :height, class: "form-control" %>
        </div>
      </div><!-- .row -->
      <div class="row">
        <div class="form-group col-lg-6">
          <%= f.label :cost %><br>
          <div class="input-group">
            <span class="input-group-addon">$</span>
            <%= f.text_field :cost, class: "form-control" %>
            <span class="input-group-addon">.00</span>
          </div>
        </div>
        <div class="form-group col-lg-6">
          <%= f.label :quantity %><br>
          <%= f.number_field :quantity, class: "form-control" %>
        </div>
      </div><!-- .row -->
    </div><!-- .col-sm-6 -->
    <div class="col-md-offset-1 col-sm-5">
      <%= f.fields_for :image, @patch.image do |image_fields| %>
        <%= render "image_fields", {builder: image_fields, image: @patch.image} %>
      <% end %>
    </div><!-- .col-sm-6 -->
  </div><!-- .row -->
  
  <div class="panel-footer">
    <%= f.submit submit_text(@patch),class: "btn btn-default" %>
    <%= f.submit(t('helpers.actions.create_and_continue'), class: "btn btn-primary") if( action_name == "new" ) %>
  </div>
<% end %>
